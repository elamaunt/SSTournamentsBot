#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["SSTournamentsBot.Api/SSTournamentsBot.Api.csproj", "SSTournamentsBot.Api/"]
RUN dotnet restore "SSTournamentsBot.Api/SSTournamentsBot.Api.csproj"
COPY . .
WORKDIR "/src/SSTournamentsBot.Api"
RUN dotnet build "SSTournamentsBot.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SSTournamentsBot.Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SSTournamentsBot.Api.dll"]